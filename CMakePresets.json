{
  "version": 3,
  "configurePresets": [
    {
      "name": "vcpkg-linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-linux",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_MAKE_PROGRAM": "/usr/bin/ninja",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    }
  ]
}